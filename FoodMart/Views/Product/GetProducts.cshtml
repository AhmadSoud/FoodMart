@model List<FoodMart.Models.ProductViewModel>
@{
    ViewData["Title"] = "Product List";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/css/getproducts.css" rel="stylesheet" />


<h2 class="title"> Product List</h2>

@if (Model != null && Model.Count > 0)
{
    <div class="products-grid">
        @foreach (var Product in Model)
        {

            <div class="product-card">
                @if (!string.IsNullOrEmpty(Product.product.ImagePath))
                {
                    <img src="@Product.product.ImagePath" alt="Product Image" />
                }
                else
                {
                    <div class="product-no-image">No Image</div>
                }

                <div class="card-body">
                    <h3>@Product.product.Name</h3>
                    <p><strong>Description:</strong> @Product.product.Description</p>
                   @*  <p><strong>Created:</strong> @Product.product.CreatedDate.ToString("yyyy-MM-dd")</p>
                    <p><strong>Price:</strong> $@Product.product.Price</p> *@
                    <p><strong>Category:</strong> @Product.product.category.Name</p>
                </div>

                <div class="card-footer">
                    <a asp-action="Edit" asp-route-id="@Product.product.Id">Edit</a>
                    <form asp-action="Delete" asp-route-id="@Product.product.Id" method="post"
                          onsubmit="return confirm('Are you sure you want to delete this product?');">
                        <button type="submit">Delete</button>
                    </form>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert-message">
        No products found.
    </div>
}

}
