<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="UTF-8">
    <title>Product Details</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .product-image {
            width: 200px;
            height: 200px;
            object-fit: cover;
            border-radius: 12px;
        }

        .description {
            margin-top: 15px;
            color: #555;
            font-size: 16px;
        }

        .btn-buy {
            background-color: #28a745;
            color: white;
        }

        .btn-buy:hover {
            background-color: #218838;
        }

        .btn-cart {
            background-color: #ffc107;
            color: black;
        }

        .btn-cart:hover {
            background-color: #e0a800;
        }

        .Price{
            font-size: 25px;
            color: black;
        }

        .PriceQut{
            font-size: 22px;
            color: green;
        }
    </style>
</head>
<body>

<div class="container py-5">
    <div class="row align-items-center bg-white p-4 rounded shadow-sm">

        <!-- LEFT SIDE: Text and buttons -->
        <div class="col-md-6">
            <h2 class="mb-3">@Model.Name</h2>

            <br />
                <br />
@*             <h4 class="text-danger mb-3">Unit Price: @Model.Price JOD</h4>
 *@
                <div class="mb-4">
                    <span class="Price">Total Price: </span>
                    <span id="totalPrice" class="PriceQut">@Model.Price </span><sub> <b>JOD</b> </sub>
                </div>
 
 <div class="mb-3">
                <label for="quantity" class="form-label fw-bold">Quantity:</label>
                <input type="number" id="quantity" class="form-control w-25 d-inline-block" min="1" value="1">
            </div>

           @*  <div class="mb-4">
                <span class="fw-bold">Total Price: </span>
                <span id="totalPrice" class="text-primary">@Model.Price JOD</span>
            </div> *@

            <div class="d-flex gap-3">
                <button class="btn btn-cart px-4">Add to Cart</button>
                <button class="btn btn-buy px-4">Buy Now</button>
            </div>
        </div>

        <div class="col-md-6 text-center">
            <img src="@Model.ImagePath" alt="Product Image" class="product-image mb-3">
            <p class="description">@Model.Description</p>
        </div>
    </div>
</div>

<script>
    const unitPrice = @Model.Price;
    const quantityInput = document.getElementById("quantity");
    const totalPriceEl = document.getElementById("totalPrice");

    function updateTotalPrice() {
        const qty = parseInt(quantityInput.value) || 1;
        const total = unitPrice * qty;
        totalPriceEl.textContent = `${total} `;
    }

    quantityInput.addEventListener("input", updateTotalPrice);
    updateTotalPrice();
</script>

</body>
</html>

