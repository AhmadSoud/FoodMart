@model List< FoodMart.Models.Category>
@{
    ViewData["Title"] = "Category List";
}

<link href="~/css/getcategories.css" rel="stylesheet" />
<h2 class="shadow">Category List</h2>





<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th class="description">Description</th>
            <th>Created On</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count() > 0)
        {
            foreach (var category in Model)
            {
                <tr class="table-row">
                    <td class="gradient-text">@category.Id</td>
                   @*  <td>@category.Name</td> *@
                    <td class="gradient-text">
                        @category.Name
                    </td>
                    <td>@category.Description</td>
                    <td>@category.CreatedDate.ToString("yyyy-MM-dd")</td>
                    <td style="width: 150px; height: 120px; padding: 0;">
                        @if (!string.IsNullOrEmpty(category.ImagePath))
                        {
                            <img src="@category.ImagePath" alt="Image" @* style="width: 50%; height: auto;" *@ style="width: 100%; height: 100%; object-fit: cover; display: block;" />
                        }
                        else
                        {
                            <span>No image</span>
                        }
                    </td>
                    <td>
                        <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@category.Id">Edit</a>
                        <form asp-action="Delete" asp-route-id="@category.Id" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-sm btn-danger"
                                    onclick="return confirm('Are you sure you want to delete this category?');">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center">No categories found.</td>
            </tr>
        }
    </tbody>
</table>




